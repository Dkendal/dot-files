# vim: sw=2
snippet @gt "GraphQL GraphType"
class $1 < Type
	pre_resolve_access(false)

	field(${2:field_name}, ${3:Type}, null: false)
end
endsnippet

snippet @gf "GraphQL field"
field(:$1, ${2::string}, null: ${3:false})
endsnippet

snippet @h "Untyped hash"
T::Hash[T.untyped, T.untyped]
endsnippet
