[Unit]
Description=Setup a remote tunnel to %I
Documentation=man:ssh(1)
After=network.target

[Service]
EnvironmentFile=%h/.ssh/remote-tunnels/%i
ExecStart=/usr/bin/ssh -o ServerAliveInterval=60 -o ExitOnForwardFailure=yes -nNT -R ${REMOTE_PORT}:${LOCAL_ADDR}:${LOCAL_PORT} ${REMOTE_USER}@${REMOTE_HOST} ${SSH_OPTS}
RestartSec=15
Restart=always
KillMode=mixed

[Install]
WantedBy=multi-user.target
